                            "type": "string"
                        },
                        "catalog": {
                            "type": "string"
                        },
                        "chartName": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "extraConfigs": {
                            "type": "array"
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "namespaceConfig": {
                            "type": "object",
